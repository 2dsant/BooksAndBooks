@model BooksAndBooks.Models.Book


<div class="text-center">
    <h1 class="display-4">Add new book</h1>

    <form asp-controler="Home" asp-action="AddBook" method="POST">
        <fieldset>
            <div class="form-group">
                <label for="exampleTextarea">Name</label>
                <input class="form-control" id="exampleTextarea" asp-for="Name" />

                <label for="exampleTextarea">Author</label>
                <input class="form-control" id="exampleTextarea" rows="3" asp-for="Author"/>

                <label for="exampleTextarea">PublishYear</label>
                <input class="form-control" id="exampleTextarea" rows="3" asp-for="Name"/>

                <label for="exampleTextarea">Description</label>
                <textarea class="form-control" id="exampleTextarea" rows="3" asp-for="Description"></textarea>
            </div>

            <div class="form-group">
                <label for="exampleSelect1">Category</label>
                <select class="form-control" id="exampleSelect1" asp-for="Category">
                    <option value="1">Mystery</option>
                    <option value="2">Drama</option>
                    <option value="3">Fantasy</option>
                    <option value="4">Romance</option>
                    <option value="5">Suspense</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Adicionar</button>
        </fieldset>
    </form>
</div>